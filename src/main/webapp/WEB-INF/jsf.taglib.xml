<?xml version="1.0" encoding="ISO-8859-1"?>

<facelet-taglib
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd"
    version="2.2">

    <namespace>http://tags.microprofile.training.gepardec.com</namespace>
    <short-name>tags</short-name>


    <tag>
        <tag-name>header</tag-name>
        <source>tags/header.xhtml</source>
        <attribute>
            <description>The header title</description>
            <name>title</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The header back path without ${request.contextPath}/api. If empty no button is rendered</description>
            <name>backPath</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>If true tag is rendered, otherwise not</description>
            <name>rendered</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>card</tag-name>
        <source>tags/card.xhtml</source>
        <attribute>
            <description>The card title</description>
            <name>title</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The header back path without ${request.contextPath}/api</description>
            <name>backPath</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>If true tag is rendered, otherwise not</description>
            <name>rendered</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>

    <tag>
        <tag-name>button</tag-name>
        <source>tags/button.xhtml</source>
        <attribute>
            <description>The button text</description>
            <name>text</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The button path without ${request.contextPath}/api</description>
            <name>path</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>The button target like _self</description>
            <name>target</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>If true tag is rendered, otherwise not</description>
            <name>rendered</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
</facelet-taglib>